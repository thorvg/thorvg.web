{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["src/base-lottie-player.ts"],
  "out": "docs",
  "name": "ThorVG Lottie Player API",
  "includeVersion": true,
  "tsconfig": "./tsconfig.json",

  "plugin": ["typedoc-plugin-missing-exports"],

  "readme": "README.md",
  "githubPages": true,
  "hideGenerator": true,

  "json": "docs/api.json",

  "categorizeByGroup": true,
  "defaultCategory": "Other",
  "categoryOrder": [
    "Player Control",
    "Configuration",
    "Properties",
    "Events",
    "Types",
    "Enums",
    "*"
  ],

  "navigation": {
    "includeCategories": true,
    "includeGroups": false,
    "includeFolders": false,
    "compactFolders": true
  },

  "searchInComments": true,
  "searchInDocuments": true,

  "sort": ["source-order", "required-first", "kind"],

  "kindSortOrder": [
    "Class",
    "Interface",
    "TypeAlias",
    "Enum",
    "Function",
    "Property",
    "Method",
    "Accessor"
  ],

  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build_wasm_player/**",
    "**/coverage/**",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],

  "excludePrivate": true,
  "excludeProtected": true,
  "excludeInternal": true,

  "validation": {
    "notExported": true,
    "invalidLink": true,
    "notDocumented": false
  },

  "visibilityFilters": {
    "protected": false,
    "private": false,
    "inherited": true,
    "external": false
  },

  "lightHighlightTheme": "light-plus",
  "darkHighlightTheme": "dark-plus",

  "titleLink": "/"
}
